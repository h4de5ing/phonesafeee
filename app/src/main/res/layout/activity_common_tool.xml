<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mo="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        style="@style/titlebarStyle"
        android:text="常用工具类" />

    <mo.com.phonesafe.view.NormalItemView
        android:id="@+id/si_address_query"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="2dp"
        mo:nivBackground="purple"
        mo:nivGo="true"
        mo:nivIcon="@drawable/bd"
        mo:nivTextColor="@color/normalblue_right"
        mo:nivTile="号码归属地查询" />

    <mo.com.phonesafe.view.NormalItemView
        android:id="@+id/si_normal_query"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="2dp"
        mo:nivBackground="green"
        mo:nivGo="true"
        mo:nivIcon="@drawable/ic_share"
        mo:nivTextColor="@color/normalblue_right"
        mo:nivTile="常用号码查询" />

    <mo.com.phonesafe.view.NormalItemView
        android:id="@+id/si_sms_backup"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        mo:nivBackground="green"
        mo:nivGo="false"
        mo:nivIcon="@drawable/cd"
        mo:nivTextColor="@color/normalblue_right"
        mo:nivTile="短信备份" />

    <mo.com.phonesafe.view.NormalItemView
        android:id="@+id/si_sms_restore"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="2dp"
        mo:nivBackground="green"
        mo:nivGo="false"
        mo:nivIcon="@drawable/qc"
        mo:nivTextColor="@color/normalblue_right"
        mo:nivTile="短信还原" />


    <mo.com.phonesafe.view.NormalItemView
        android:id="@+id/si_appsocke_manager"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        mo:nivBackground="green"
        mo:nivGo="true"
        mo:nivIcon="@drawable/ad"
        mo:nivTextColor="@color/normalblue_right"
        mo:nivTile="程序锁管理" />



    <mo.com.phonesafe.view.NormalItemView
        android:id="@+id/si_open_dog"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="2dp"
        mo:nivBackground="green"
        mo:nivGo="true"
        mo:nivIcon="@drawable/fd"
        mo:nivTextColor="@color/normalblue_right"
        mo:nivTile="开启电子狗服务" />

    <mo.com.phonesafe.view.SettingItemView
        android:layout_marginTop="8dp"
        android:id="@+id/siv_open_dog"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        mo:sivToggle="true"
        mo:sivTitle="开启电子狗"
        mo:paddingEnd="18dp"
        mo:sivBackground="purple">
    </mo.com.phonesafe.view.SettingItemView>

</LinearLayout>
